{
    "preset": "laravel",
    "rules": {
        "ordered_imports": true,
        "no_unused_imports": true,
        "array_syntax": {
            "syntax": "short"
        },
        "blank_line_before_statement": {
            "statements": ["return"]
        },
        "concat_space": {
            "spacing": "one"
        }
    },
    "exclude": [
        "vendor",
        "storage",
        "node_modules"
    ]
}
